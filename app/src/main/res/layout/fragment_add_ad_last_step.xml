<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_200"
    android:fitsSystemWindows="false"
    tools:context=".ui.addad.AddAdFragment">

    <include layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:background="@color/gray_200"
                android:orientation="vertical">
                <ImageView
                    android:paddingHorizontal="73dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/img_steps_3"
                    ></ImageView>
            </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="60dp"
                android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="25dp"
                android:paddingBottom="80dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/gray_200"
                >

                <LinearLayout
                    android:id="@+id/ships_detail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/gray_200"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/gray_200"
                        android:weightSum="2"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="14dp"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                android:textColorHint="@color/purple_500"
                                app:placeholderTextColor="@color/black"
                                app:hintTextColor="@color/purple_500">

                                <EditText

                                    android:id="@+id/ships_detail_start_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/edit"
                                    android:fontFamily="@font/roboto_medium"
                                    android:hint="Alım tarihi"
                                    android:inputType="text"
                                    android:text="20.02.2022"
                                    android:textColorHint="@color/black"
                                    android:textSize="14dp"

                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="14dp"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                android:textColorHint="@color/purple_500"
                                app:placeholderTextColor="@color/black"
                                app:hintTextColor="@color/purple_500">

                                <EditText
                                    android:id="@+id/ships_detail_end_date"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/edit"
                                    android:fontFamily="@font/roboto_medium"
                                    android:hint="Teslim tarihi"
                                    android:inputType="text"
                                    android:text="22.02.2022"
                                    android:textColorHint="@color/black"
                                    android:textSize="14dp"

                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/gray_200"
                        android:weightSum="2"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginHorizontal="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="14dp"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                android:textColorHint="@color/purple_500"
                                app:placeholderTextColor="@color/black"
                                app:hintTextColor="@color/purple_500">

                                <EditText

                                    android:id="@+id/ships_detail_start_place"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/edit"
                                    android:fontFamily="@font/roboto_medium"
                                    android:hint="Kalkış yeri"
                                    android:inputType="text"
                                    android:text="Ankara/Çamlıdere"
                                    android:textColorHint="@color/black"
                                    android:textSize="14dp"

                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginHorizontal="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="14dp"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                android:textColorHint="@color/purple_500"
                                app:placeholderTextColor="@color/black"
                                app:hintTextColor="@color/purple_500">

                                <EditText
                                    android:id="@+id/ships_detail_end_place"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/edit"
                                    android:fontFamily="@font/roboto_medium"
                                    android:hint="Varış yeri"
                                    android:inputType="text"
                                    android:text="Antalya/Elmalı"
                                    android:textColorHint="@color/black"
                                    android:textSize="14dp"

                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/gray_200"
                        android:weightSum="2"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginHorizontal="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="14dp"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                android:textColorHint="@color/purple_500"
                                app:placeholderTextColor="@color/black"
                                app:hintTextColor="@color/purple_500">

                                <EditText

                                    android:id="@+id/ships_detail_load_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/edit"
                                    android:fontFamily="@font/roboto_medium"
                                    android:hint="Yük cinsi"
                                    android:inputType="text"
                                    android:text="Beyaz eşya"
                                    android:textColorHint="@color/black"
                                    android:textSize="14dp"

                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginHorizontal="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="14dp"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                android:textColorHint="@color/purple_500"
                                app:placeholderTextColor="@color/black"
                                app:hintTextColor="@color/purple_500">

                                <EditText
                                    android:id="@+id/ships_detail_load_size"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/edit"
                                    android:fontFamily="@font/roboto_medium"
                                    android:hint="Yük miktarı"
                                    android:inputType="text"
                                    android:text="50"
                                    android:textColorHint="@color/black"
                                    android:textSize="14dp"

                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/gray_200"
                        android:weightSum="2"
                        >

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginHorizontal="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="14dp"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                android:textColorHint="@color/purple_500"
                                app:placeholderTextColor="@color/black"
                                app:hintTextColor="@color/purple_500">

                                <EditText

                                    android:id="@+id/ships_detail_car_type"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/edit"
                                    android:fontFamily="@font/roboto_medium"
                                    android:hint="Araç tipi"
                                    android:inputType="text"
                                    android:text="Askılı"
                                    android:textColorHint="@color/black"
                                    android:textSize="14dp"

                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginHorizontal="10dp"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="2dp">

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="14dp"
                                app:boxStrokeWidth="0dp"
                                app:boxStrokeWidthFocused="0dp"
                                android:textColorHint="@color/purple_500"
                                app:placeholderTextColor="@color/black"
                                app:hintTextColor="@color/purple_500">

                                <EditText
                                    android:id="@+id/ships_detail_money"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/edit"
                                    android:fontFamily="@font/roboto_medium"
                                    android:hint="Fiyat"
                                    android:inputType="text"
                                    android:text="500 ₺"
                                    android:textColorHint="@color/black"
                                    android:textSize="14dp"

                                    />

                            </com.google.android.material.textfield.TextInputLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="14dp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            android:textColorHint="@color/purple_500"
                            app:hintTextColor="@color/purple_500">

                            <EditText
                                android:id="@+id/ships_detail_transfer_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/edit"
                                android:fontFamily="@font/roboto_medium"
                                android:hint="Taşıma türü"
                                android:inputType="text"
                                android:text="Parsiyel yük"
                                android:textColorHint="@color/black"
                                android:textSize="14dp"

                                />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="14dp"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="0dp"
                            android:textColorHint="@color/purple_500"
                            app:hintTextColor="@color/purple_500">

                            <EditText
                                android:id="@+id/ships_detail_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/edit"
                                android:fontFamily="@font/roboto_medium"
                                android:hint="İlan açıklaması"
                                android:inputType="text"
                                android:text="Baharat taşımacılığı"
                                android:textColorHint="@color/black"
                                android:textSize="14dp"

                                />

                        </com.google.android.material.textfield.TextInputLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="2dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@color/white"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14dp"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/purple_500"
                                android:text="Sigorta"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="10dp"></TextView>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:background="@color/white"
                                >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginStart="15dp"
                                    android:src="@drawable/ic_insurance_allianz"
                                    ></ImageView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="13dp"
                                    android:fontFamily="@font/roboto_medium"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginEnd="15dp"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:layout_marginStart="15dp"
                                    android:text="200 ₺"></TextView>

                            </RelativeLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/add_ad_last_step_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/button"
                        android:text="Onaya Gönder"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:fabCradleMargin="20dp"
        app:fabCradleVerticalOffset="10dp"
        app:fabCradleRoundedCornerRadius="20dp"
        android:layout_gravity="bottom">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            app:labelVisibilityMode="unlabeled"
            app:itemTextColor="@color/purple_500"
            app:itemIconTint="@color/purple_500"
            android:background="@drawable/background_transparent"
            app:menu="@menu/bottom_nav_menu" />

    </com.google.android.material.bottomappbar.BottomAppBar>
    <androidx.cardview.widget.CardView
        android:id="@+id/fab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="180dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_applications_group"
            android:layout_gravity="center">
        </ImageView>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
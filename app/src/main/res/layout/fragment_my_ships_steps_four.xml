<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false"
    tools:context=".ui.addad.AddAdFragment">

    <include layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:background="@color/white">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="60dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:paddingBottom="14dp"
                    android:background="@color/gray_200"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/ships_status_image"
                        android:layout_marginHorizontal="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="18dp"
                        android:src="@drawable/ships_step_4"
                        ></ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingVertical="4dp"
                        android:background="@color/gray_200"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/purple_500"
                            android:textSize="10sp"
                            android:layout_marginStart="30dp"
                            android:text="Taşıyıcı onayı"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/purple_500"
                            android:textSize="10sp"
                            android:layout_marginStart="37dp"
                            android:text="Yüklemede"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/purple_500"
                            android:textSize="10sp"
                            android:layout_marginStart="24dp"
                            android:text="Taşıma sürüyor"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/purple_500"
                            android:textSize="10sp"
                            android:layout_marginStart="24dp"
                            android:text="Tamamlandı"></TextView>

                    </LinearLayout>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginStart="30dp"
                    android:text="Gönderi teslim edileceği adrese ulaştı"></TextView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="25dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/gray_200"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/gray_500"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/gray_200"
                            android:weightSum="2"
                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="2dp">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/my_ships_adress_purchase"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="14dp"
                                    app:boxStrokeWidth="0dp"
                                    app:boxStrokeWidthFocused="0dp"
                                    android:textColorHint="@color/purple_500"
                                    app:placeholderTextColor="@color/black"
                                    app:hintTextColor="@color/purple_500">

                                    <EditText

                                        android:id="@+id/my_ships_adress_purchase_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/edit"
                                        android:fontFamily="@font/roboto_medium"
                                        android:hint="Alım yeri"
                                        android:inputType="text"
                                        android:text="Ankara/Kızılay"
                                        android:textColorHint="@color/black"
                                        android:textSize="14dp"

                                        />

                                </com.google.android.material.textfield.TextInputLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="2dp">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/my_ships_adress_delivery"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="14dp"
                                    app:boxStrokeWidth="0dp"
                                    app:boxStrokeWidthFocused="0dp"
                                    android:textColorHint="@color/purple_500"
                                    app:placeholderTextColor="@color/black"
                                    app:hintTextColor="@color/purple_500">

                                    <EditText
                                        android:id="@+id/my_ships_adress_delivery_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/edit"
                                        android:fontFamily="@font/roboto_medium"
                                        android:hint="Teslim yeri"
                                        android:inputType="text"
                                        android:text="Antalya/Elmalı"
                                        android:textColorHint="@color/black"
                                        android:textSize="14dp"

                                        />

                                </com.google.android.material.textfield.TextInputLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/gray_200"
                            android:weightSum="2"
                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginHorizontal="10dp"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="2dp">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/my_ships_drive"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="14dp"
                                    app:boxStrokeWidth="0dp"
                                    app:boxStrokeWidthFocused="0dp"
                                    android:textColorHint="@color/purple_500"
                                    app:placeholderTextColor="@color/black"
                                    app:hintTextColor="@color/purple_500">

                                    <EditText

                                        android:id="@+id/my_ships_drive_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/edit"
                                        android:fontFamily="@font/roboto_medium"
                                        android:hint="Araç şoförü"
                                        android:inputType="text"
                                        android:text="Murat Dursun"
                                        android:textColorHint="@color/black"
                                        android:textSize="14dp"

                                        />

                                </com.google.android.material.textfield.TextInputLayout>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginHorizontal="10dp"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="2dp">

                                <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/my_ships_contact"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="14dp"
                                    app:boxStrokeWidth="0dp"
                                    app:boxStrokeWidthFocused="0dp"
                                    android:textColorHint="@color/purple_500"
                                    app:placeholderTextColor="@color/black"
                                    app:hintTextColor="@color/purple_500">

                                    <EditText
                                        android:id="@+id/my_ships_contact_edt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/edit"
                                        android:fontFamily="@font/roboto_medium"
                                        android:hint="İletişim"
                                        android:inputType="text"
                                        android:text="05121233456"
                                        android:textColorHint="@color/black"
                                        android:textSize="14dp"

                                        />

                                </com.google.android.material.textfield.TextInputLayout>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="25dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@color/gray_200"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/gray_500"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="@color/gray_200"
                            >

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="94dp"
                                android:background="@color/gray_200"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="2dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ship_example_image_1"
                                    ></ImageView>

                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="94dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="10dp"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="2dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ship_example_image_1"
                                    ></ImageView>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/ships_approve_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/button"
                        android:text="Onayla"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:fabCradleMargin="20dp"
        app:fabCradleVerticalOffset="10dp"
        app:fabCradleRoundedCornerRadius="20dp"
        android:layout_gravity="bottom">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            app:labelVisibilityMode="unlabeled"
            app:itemTextColor="@color/purple_500"
            app:itemIconTint="@color/purple_500"
            android:background="@drawable/background_transparent"
            app:menu="@menu/bottom_nav_menu" />

    </com.google.android.material.bottomappbar.BottomAppBar>
    <androidx.cardview.widget.CardView
        android:id="@+id/fab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="180dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_applications_group"
            android:layout_gravity="center">
        </ImageView>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
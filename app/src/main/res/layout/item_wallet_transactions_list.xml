<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="@color/white"
    tools:parentTag="androidx.cardview.widget.CardView">

    <LinearLayout
        android:id="@+id/rootConstraint"
        android:layout_width="match_parent"
        android:paddingHorizontal="8dp"
        android:orientation="vertical"
        android:layout_height="99dp">


        <TextView
            android:id="@+id/wallet_transaction_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="7dp"
            android:textColor="@color/gray_700"
            android:textSize="10sp"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:text="C*** N****" />

        <androidx.cardview.widget.CardView
            android:id="@+id/my_wallet_total_money"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            app:cardBackgroundColor="@color/gray_500"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            android:layout_marginTop="9dp"
            android:paddingBottom="10dp"
            >

        <TextView
            android:id="@+id/wallet_transaction_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Güzel alışverişti" ></TextView>

            <TextView
                android:id="@+id/wallet_transaction_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="4dp"
                android:maxLines="1"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/green_200"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Güzel alışverişti" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.cardview.widget.CardView>


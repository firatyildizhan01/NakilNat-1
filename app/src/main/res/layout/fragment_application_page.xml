                android:layout_marginBottom="10dp"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="2dp"
                app:cardCornerRadius="15dp">


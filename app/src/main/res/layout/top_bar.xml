<RelativeLayout
    android:id="@+id/top_bar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="60dp"
    android:layout_width="match_parent"
    android:background="@drawable/bg_toolbar"
    android:elevation="2dp"
    >

    <LinearLayout
        android:background="@drawable/background_transparent"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/top_bar_back"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@drawable/ic_back"
                android:visibility="visible"
                card_view:tint="@color/white">

            </ImageView>

            <TextView
                android:id="@+id/top_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/roboto_bold"
                android:text="@string/profilePage"
                android:textColor="@color/white"
                android:textSize="18sp"></TextView>


            <ImageView
                android:id="@+id/top_bar_notifications"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:src="@drawable/ic_notification_none"
                card_view:tint="@color/white">

            </ImageView>

            <TextView
                android:id="@+id/top_bar_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Adres ekle"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="14sp">

            </TextView>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>




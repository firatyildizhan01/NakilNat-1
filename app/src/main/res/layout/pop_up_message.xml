<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mesaj gönder"
        android:textColor="@color/purple_500"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:textSize="@dimen/_18sdp"
        android:layout_margin="@dimen/_10sdp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_gravity="center"
        android:gravity="left"
        android:orientation="vertical"
        android:background="@drawable/rounded_corners">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesajinizi giriniz"
                android:id="@+id/txt_patient"
                android:textColor="@color/purple_200"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_12sdp"
               android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"/>




            <TextView
                android:layout_width="@dimen/_220sdp"
                android:layout_height="wrap_content"
                android:text="Lotem ipsum dolor sit amet, consetetur sadipscing elitr,sed diam nonumy eirmod tempor"
                android:id="@+id/txt_staff"
                android:textColor="@color/black"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"/>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginBottom="@dimen/_10sdp"

        android:layout_gravity="right"
        android:backgroundTint="@color/purple_200"
        android:layout_marginStart="10dp"
        app:cardCornerRadius="7dp"
        android:layout_marginEnd="@dimen/_5sdp"
        >

        <TextView
            android:id="@+id/item_offers_kabul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gönder"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="@dimen/_18sdp"

            android:layout_gravity="center"
            />

    </androidx.cardview.widget.CardView>




</LinearLayout>
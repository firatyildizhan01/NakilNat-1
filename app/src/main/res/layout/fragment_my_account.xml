<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_200"
    android:fitsSystemWindows="false"
    tools:context=".ui.profile.MyInvoicesFragment">

    <include layout="@layout/top_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="10dp"
        android:background="@color/gray_200">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="25dp"
        android:paddingVertical="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/account_name_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="@color/purple_500"
                app:hintTextColor="@color/purple_500">

                <EditText
                    android:id="@+id/account_name_surname_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="İsim Soyisim veya Firma Adı"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:text=""
                    android:textColorHint="@color/purple_500"
                    android:textSize="14dp"

                    />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/account_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="@color/purple_500"
                app:hintTextColor="@color/purple_500">

                <EditText
                    android:id="@+id/account_phone_number_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Telefon Numarası"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:text=""
                    android:textColorHint="@color/black"
                    android:textSize="14dp"

                    />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/account_tckn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="@color/purple_500"
                app:hintTextColor="@color/purple_500">

                <EditText
                    android:id="@+id/account_tckn_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Tc Kimlik Numarası"
                    android:inputType="number"
                    android:text=""
                    android:textColor="@color/black"
                    android:textColorHint="@color/purple_500"
                    android:textSize="14dp"

                    />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/account_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="@color/purple_500"
                app:hintTextColor="@color/purple_500">

                <EditText
                    android:id="@+id/account_email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="E Posta Adresi"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textColorHint="@color/black"
                    android:textSize="14dp"

                    />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >

                <Spinner
                    android:id="@+id/account_city"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:spinnerMode="dropdown"
                    android:overlapAnchor="false"
                    android:dropDownWidth="match_parent"
                    android:padding="0dp"
                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                >
                <Spinner
                    android:id="@+id/account_district"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:spinnerMode="dropdown"
                    android:overlapAnchor="false"
                    android:dropDownWidth="match_parent"
                    android:padding="0dp"
                    />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="5dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/account_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:textSize="14dp"
                app:boxStrokeWidth="0dp"
                app:boxStrokeWidthFocused="0dp"
                android:textColorHint="@color/purple_500"
                app:hintTextColor="@color/purple_500">

                <EditText
                    android:id="@+id/account_adress_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/edit"
                    android:fontFamily="@font/roboto_medium"
                    android:hint="Adres"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:text=""
                    android:textColorHint="@color/black"
                    android:textSize="14dp"

                    />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/update_account_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="0dp"
                android:background="@drawable/button"
                android:fontFamily="@font/roboto_bold"
                android:text="Güncelle"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        app:fabCradleMargin="20dp"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleVerticalOffset="10dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_transparent"
            app:itemIconTint="@color/purple_500"
            app:itemTextColor="@color/purple_500"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu" />

    </com.google.android.material.bottomappbar.BottomAppBar>

    <androidx.cardview.widget.CardView
        android:id="@+id/fab"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:elevation="2dp"
        app:cardCornerRadius="180dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_applications_group"></ImageView>
    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
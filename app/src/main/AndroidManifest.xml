        <activity android:name=".ui.onboarding.PhoneNumberFragment"></activity>
        <activity android:name=".ui.onboarding.SmsVerificationFragment"></activity>
        <activity android:name=".ui.onboarding.RememberPasswordSmsVerification"></activity>
        <activity android:name=".ui.onboarding.NewPasswordFragment"></activity>
        <activity android:name=".ui.onboarding.RegisterFragment"></activity>
        <activity android:name=".ui.onboarding.OnboardingFragment"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
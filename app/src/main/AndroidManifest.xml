        android:windowSoftInputMode="stateVisible|adjustPan"></activity>
        <activity android:name=".ui.myships.MyShipsFragment"></activity>
        <activity android:name=".ui.myships.ShipsStepsFragment"></activity>
        <activity android:name=".ui.myships.ContinueShipsFragment"></activity>
        <activity android:name=".ui.home.HomePageFragment"></activity>

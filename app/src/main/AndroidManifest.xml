        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nakilnat">
        <meta-data android:name="com.google.android.geo.API_KEY"
            android:value= "@string/map_key"/>
        <activity android:name=".ui.profile.ProfilePageFragment"></activity>
        <activity android:name=".ui.profile.map.MapFragment"></activity>
        <activity android:name=".ui.profile.ReviewFragment"></activity>
        <activity android:name=".ui.profile.myads.MyAdsFragment"></activity>
        <activity android:name=".ui.profile.myads.ContinueAdsFragment"></activity>

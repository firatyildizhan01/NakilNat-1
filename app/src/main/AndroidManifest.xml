        <activity android:name=".ui.profile.MyNotificationsFragment"></activity>
        <activity android:name=".ui.profile.mywallet.MyWalletTransactionsFragment"></activity>
        <activity android:name=".ui.profile.MySettingsFragment"></activity>
        <activity android:name=".ui.profile.MyAccountFragment"></activity>
        <activity android:name=".ui.profile.mywallet.MyWalletFragment"></activity>
        <activity android:name=".ui.profile.mywallet.AddMoneyFragment"></activity>
        <activity android:name=".ui.profile.UpdatePasswordFragment"></activity>
        <activity android:name=".ui.profile.MyInvoicesFragment"></activity>
        <activity android:name=".ui.application.ApplicationPageFragment"></activity>
        <activity android:name=".ui.addad.AddAdFragment"
